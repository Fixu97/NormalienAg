                                        <li><a href="#">Winkeltisch</a></li>
                                    </ul>
                                </li>

                                <!--Kontakt-->
                                <li><a href="#">Kontakt</a></li>

                            </ul>
                            <!--End of left-->
                            <!--Right-->
                            <ul class="nav navbar-nav navbar-right">

                                <!--Login-->
                                <li><a href="#">Login</a></li>

                            </ul>
                            <!--End of right-->
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!--End of mobile navigation-->

        <div class="row">
            <div id="content" class="col-md-12">
                @RenderBody()
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <hr />
            </div>
        </div>

        <div class="row">
            <div id="footer" class="col-md-12">
                <div class="row">
                    <div class="col-md-3">
                        Normalien AG<br />
                    </div>
                    <div class="col-md-3">
                        Tel: +41 31 992 18 37
                    </div>
                    <div class="col-md-3">
                        Fax: +41 31 991 12 64
                    </div>
                    <div class="col-md-3">
                        Email: <a href="mailto://info@normalien-ag.ch">info@normalien-ag.ch</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
