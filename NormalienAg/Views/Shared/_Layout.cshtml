                        <div class="row">
                            <div class="col-md-6">• Werkzeug & Formenbau</div>
                            <div class="col-md-6">• Führungselemente</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">• CNC-Fertigung</div>
                            <div class="col-md-6">• Maschinenbau</div>
                        </div>
                    </div>
                    <div class="col-md-3" id="header-contact">
                        <adress>
                            <table class="contact-table">
                                <tr>
                                    <td>Tel.</td>
                                    <td>031 992 18 37</td>
                                </tr>
                                <tr>
                                    <td>Mobile</td>
                                    <td>079 296 52 33</td>
                                </tr>
                                <tr>
                                    <td>Fax</td>
                                    <td>031 991 12 65</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td><a href="mailto:info@normalien-ag.ch">info@normalien-ag.ch</a></td>
                                </tr>
                            </table>
